@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<div class="flex px-4 py-2 w-full justify-between border-b-[1px] border-black">
    <div>
        <button class="text-black px-4 py-2 rounded" @onclick="NavigateToEvaluateAuctions">Evaluate Auctions</button>
    </div>
    <div>
        <button class="bg-black text-white px-4 py-2 rounded" @onclick="SignOut">Sign Out</button>
    </div>
</div>

@code {
    private void NavigateToEvaluateAuctions()
    {
        NavigationManager.NavigateTo("/admin/cards");
    }

    private async Task SignOut()
    {
        await LocalStorage.RemoveItemAsync("username");
        NavigationManager.NavigateTo("/");
        await JSRuntime.InvokeVoidAsync("location.reload");
    }
}
